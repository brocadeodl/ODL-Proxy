<?xml version="1.0" encoding="UTF-8"?>
<module name="brocade-firmware-ext"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:firmware-extensions="urn:brocade.com:mgmt:brocade-firmware-ext"
        xmlns:common-def="urn:brocade.com:mgmt:brocade-common-def"
        xmlns:ras-extensions="urn:brocade.com:mgmt:brocade-ras-ext">
  <namespace uri="urn:brocade.com:mgmt:brocade-firmware-ext"/>
  <prefix value="firmware-extensions"/>
  <import module="brocade-common-def">
    <prefix value="common-def"/>
  </import>
  <import module="brocade-ras-ext">
    <prefix value="ras-extensions"/>
  </import>
  <organization>
    <text>Brocade Communications Inc.</text>
  </organization>
  <contact>
    <text>Brocade Communications Systems, Inc.
Postal: 130 Holger Way
        San Jose, CA 95134
        U.S.A
Tel: +1-408-333-6061
E-mail: support@Brocade.com
web: www.brocade.com.</text>
  </contact>
  <description>
    <text>This sub module defines Firmware information.
Copyright (c) 2010-2011 by Brocade Communications Systems, Inc.
All rights reserved.</text>
  </description>
  <reference>
    <text></text>
  </reference>
  <revision date="2011-02-25">
    <description>
      <text>Added new Action Point for Firmware info for Netconf interface.</text>
    </description>
    <reference>
      <text></text>
    </reference>
  </revision>
  <augment target-node="/common-def:show">
    <container name="firmware">
      <description>
        <text>show firmwaredownload status</text>
      </description>
    </container>
  </augment>
  <typedef name="node-type-enum">
    <type name="enumeration">
      <enum name="type-mm">
        <value value="0"/>
      </enum>
      <enum name="type-lc">
        <value value="2"/>
      </enum>
    </type>
  </typedef>
  <rpc name="show-firmware-version">
    <description>
      <text>conveys the firmware version info</text>
    </description>
    <input>
      <leaf name="switchid">
        <type name="ras-extensions:switchid-type"/>
        <description>
          <text>Switch id specifies the particular switch to fetch firmware
version info.</text>
        </description>
      </leaf>
    </input>
    <output>
      <list name="show-firmware-version">
        <leaf name="switchid">
          <type name="ras-extensions:switchid-type"/>
          <description>
            <text>Switch id specifies the particular switch to fetch firmware version info.</text>
          </description>
        </leaf>
        <leaf name="os-name">
          <type name="string"/>
          <description>
            <text>Name of the Firmware version. Example: NOS, FOS etc.</text>
          </description>
        </leaf>
        <leaf name="os-version">
          <type name="string"/>
          <description>
            <text>Version of the Firmware.</text>
          </description>
        </leaf>
        <leaf name="copy-right-info">
          <type name="string"/>
          <description>
            <text>Copy right information of the Firmware.</text>
          </description>
        </leaf>
        <leaf name="build-time">
          <type name="string"/>
          <description>
            <text>Time information on the build of Firmware.</text>
          </description>
        </leaf>
        <leaf name="firmware-full-version">
          <type name="string"/>
          <description>
            <text>Full version string of Firmware.</text>
          </description>
        </leaf>
        <leaf name="control-processor-vendor">
          <type name="string"/>
          <description>
            <text>Information on the control processor.</text>
          </description>
        </leaf>
        <leaf name="control-processor-chipset">
          <type name="string"/>
          <description>
            <text>Information on the control processor.</text>
          </description>
        </leaf>
        <leaf name="control-processor-memory">
          <type name="string"/>
          <description>
            <text>Memory of the control processor.</text>
          </description>
        </leaf>
        <list name="node-info">
          <leaf name="slot-no">
            <type name="uint32"/>
          </leaf>
          <leaf name="node-instance-no">
            <type name="uint32"/>
          </leaf>
          <leaf name="node-type">
            <type name="node-type-enum"/>
          </leaf>
          <leaf name="is-active-cp">
            <type name="boolean"/>
            <mandatory value="false"/>
          </leaf>
          <list name="firmware-version-info">
            <leaf name="application-name">
              <type name="string"/>
              <description>
                <text>Name of the application.</text>
              </description>
            </leaf>
            <leaf name="primary-version">
              <type name="string"/>
              <description>
                <text>Indicates the Primary version.</text>
              </description>
            </leaf>
            <leaf name="secondary-version">
              <type name="string"/>
              <description>
                <text>Indicates the secondary version.</text>
              </description>
            </leaf>
          </list>
        </list>
      </list>
    </output>
  </rpc>
</module>
