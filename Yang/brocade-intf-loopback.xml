<?xml version="1.0" encoding="UTF-8"?>
<module name="brocade-intf-loopback"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:intf-loopback="urn:brocade.com:mgmt:brocade-intf-loopback"
        xmlns:rbridge="urn:brocade.com:mgmt:brocade-rbridge"
        xmlns:common-def="urn:brocade.com:mgmt:brocade-common-def"
        xmlns:interface="urn:brocade.com:mgmt:brocade-interface">
  <namespace uri="urn:brocade.com:mgmt:brocade-intf-loopback"/>
  <prefix value="intf-loopback"/>
  <import module="brocade-rbridge">
    <prefix value="rbridge"/>
  </import>
  <import module="brocade-common-def">
    <prefix value="common-def"/>
  </import>
  <import module="brocade-interface">
    <prefix value="interface"/>
  </import>
  <organization>
    <text>Brocade Communications Systems, Inc.</text>
  </organization>
  <contact>
    <text>Brocade Communications Systems, Inc.
Postal: 130 Holger Way
        San Jose, CA 95134
        U.S.A
Tel: +1-408-333-8000
E-mail: support@Brocade.com
web: www.brocade.com.</text>
  </contact>
  <description>
    <text>Module for implementing Interface Loopback CLIs</text>
  </description>
  <revision date="2011-09-28">
    <description>
      <text>Initial Version</text>
    </description>
  </revision>
  <typedef name="intf-loopback-port-type">
    <type name="uint32">
      <range value="1..255"/>
    </type>
  </typedef>
  <typedef name="intf-loopback-ipv4addr-type">
    <type name="string">
      <pattern value="(([1-9]|[1-9][0-9]|1[0-9][0-9]|2[0-4][0-9]|25[0-5])\.)(([0-9]|[1-9][0-9]|1[0-9][0-9]|2[0-4][0-9]|25[0-5])\.){2}([0-9]|[1-9][0-9]|1[0-9][0-9]|2[0-4][0-9]|25[0-5])/32">
        <error-message>
          <value>Invalid IPv4 Address/32 format</value>
        </error-message>
      </pattern>
    </type>
  </typedef>
  <container name="hide-intf-loopback-holder">
    <description>
      <text>An intermediary node that separates the loopback related 
managed objects from rest of the interface types.</text>
    </description>
    <container name="interface">
      <list name="loopback">
        <key value="id"/>
        <leaf name="id">
          <type name="intf-loopback-port-type"/>
        </leaf>
        <uses name="interface:interface-vrf-config"/>
        <container name="intf-loopback">
          <leaf name="shutdown">
            <type name="empty"/>
          </leaf>
        </container>
      </list>
      <description>
        <text>The loopback interface configurations/data of this managed
device.</text>
      </description>
    </container>
  </container>
  <augment target-node="/rbridge:rbridge-id/interface:interface">
    <list name="loopback">
      <key value="id"/>
      <leaf name="id">
        <type name="intf-loopback-port-type"/>
      </leaf>
      <uses name="interface:interface-vrf-config"/>
      <container name="intf-loopback">
        <leaf name="shutdown">
          <type name="empty"/>
        </leaf>
      </container>
    </list>
  </augment>
</module>
