<?xml version="1.0" encoding="UTF-8"?>
<module name="brocade-vrf"
        xmlns="urn:ietf:params:xml:ns:yang:yin:1"
        xmlns:vrf="urn:brocade.com:mgmt:brocade-vrf"
        xmlns:rbridge="urn:brocade.com:mgmt:brocade-rbridge"
        xmlns:inet="urn:ietf:params:xml:ns:yang:ietf-inet-types"
        xmlns:common-def="urn:brocade.com:mgmt:brocade-common-def">
  <namespace uri="urn:brocade.com:mgmt:brocade-vrf"/>
  <prefix value="vrf"/>
  <import module="brocade-rbridge">
    <prefix value="rbridge"/>
  </import>
  <import module="ietf-inet-types">
    <prefix value="inet"/>
  </import>
  <import module="brocade-common-def">
    <prefix value="common-def"/>
  </import>
  <organization>
    <text>Brocade Communications Systems, Inc.</text>
  </organization>
  <contact>
    <text>Brocade Communications Systems, Inc.
Postal: 130 Holger Way
San Jose, CA 95134
U.S.A
Tel: +1-408-333-8000
E-mail: support@Brocade.com
web: www.brocade.com.</text>
  </contact>
  <description>
    <text>This module manages Virtual Routing and Forwarding (VRF)</text>
  </description>
  <revision date="2012-04-28">
    <description>
      <text>Initial version of this management module.</text>
    </description>
  </revision>
  <typedef name="rd-type">
    <type name="string"/>
  </typedef>
  <typedef name="rt-type">
    <type name="string"/>
  </typedef>
  <grouping name="route-target-config">
    <list name="route-target">
      <key value="action target-community"/>
      <description>
        <text>Target extended communities. This functionality is not supported
in NOS4.0.0 release</text>
      </description>
      <leaf name="action">
        <type name="enumeration">
          <enum name="export">
            <value value="0"/>
          </enum>
          <enum name="import">
            <value value="1"/>
          </enum>
          <enum name="both">
            <value value="2"/>
          </enum>
        </type>
      </leaf>
      <leaf name="target-community">
        <type name="rt-type"/>
        <description>
          <text>Target VPN Extended Community</text>
        </description>
      </leaf>
    </list>
  </grouping>
  <grouping name="vrf-address-family">
    <container name="address-family">
      <list name="ipv4">
        <key value="max-route"/>
        <leaf name="max-route">
          <type name="uint32">
            <range value="128..32000"/>
          </type>
        </leaf>
        <uses name="route-target-config">
          <refine target-node="route-target"/>
        </uses>
      </list>
    </container>
  </grouping>
  <grouping name="vrf-cmds">
    <list name="vrf">
      <key value="vrf-name"/>
      <leaf name="vrf-name">
        <type name="common-def:vrf-name"/>
      </leaf>
      <leaf name="route-distiniguisher">
        <description>
          <text>Route distinguisher represented in ASN:nn
format.</text>
        </description>
        <type name="rd-type"/>
      </leaf>
      <uses name="route-target-config"/>
      <uses name="vrf-address-family"/>
      <container name="ip">
        <leaf name="vrf-router-id">
          <type name="inet:ipv4-address"/>
        </leaf>
      </container>
    </list>
  </grouping>
  <augment target-node="/rbridge:rbridge-id">
    <uses name="vrf-cmds"/>
  </augment>
</module>
