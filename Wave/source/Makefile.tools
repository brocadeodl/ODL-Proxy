################################################################################
# this file has tools and related common stuff used in all Wave and dcm makefiles
# main Makefiles are the only one that build, 
# so stuff related to building need not be here

# this makefile is included in all dcm makefiles

# the including makefile should establish TOPDIR
# so this makefile can figure out where it is,
# regardless if we are in an expected ("springboard") location or not
################################################################################

# except perhaps for generated makefiles (like dependencies) which should not be 
# touched by the user anyway

# this makefile should not include other makefiles 
# (because there is no such thing as 
# "current directory" rule like for -I compiler options,
# it is hard to determine what path to give if we included
# here)
#
# instead, the includer should include everything else as needed

.SUFFIXES:
MAKEFLAGS += -R 

OS	:= $(shell uname -s)
ECHOCMD	:= $(if $(filter $(OS),SunOS),/usr/ucb/echo,echo)

ifeq "1" "$(OPTIMIZED)"
	DEBUG	:= 0
else
	DEBUG	:= 1
endif

ifeq "1" "$(DEBUG)"
	BUILD_TYPE := debug
else
	BUILD_TYPE := optimized
endif

#establish CXXFLAGS as immediate variable
CXXFLAGS	:=

PROFILE		:= 0
GPROF		:= 0

ifeq "$(PROFILE)" "1"
    CXXFLAGS += -finstrument-functions
endif
ifeq "$(GPROF)" "1"
    CXXFLAGS += -pg
endif

ARCH_HOST := $(shell uname -m)
HOSTCXX := g++

TOOLCHAIN_PREFIX :=
ARCH	         := $(ARCH_HOST)
LDFLAGS	         := -Wl,-R.

OS_ARCH_XT := $(OS).$(ARCH)
CXX	:= $(TOOLCHAIN_PREFIX)g++$(GCCVERSION)
AR	:= $(TOOLCHAIN_PREFIX)ar

# from a make target $(1) establish a variable with the same name and value
# this way we can override checking that target from command line
TARGET_TO_VAR = $(eval $(1) := $(1))

DYNAMIC_SRC	:= DynamicSource
BIN_DIR := bin

ifeq "$(WAVE_HOME)" ""
    WAVE_HOME := $(shell pwd | grep Wave | sed "s/Wave.*/Wave/")
endif 
ifeq "$(WAVE_HOME)" ""
    $(ECHOCMD) "Please Set WAVE_HOME variable to the location of the WAVE source code."
endif 
export WAVE_HOME
export WAVE_SRC := $(WAVE_HOME)/source
WAVE_DEPENDENCIES_OS_ARCH := $(WAVE_HOME)/WaveDependencies/$(OS)/$(ARCH)
WAVE_DEPENDENCIES_OS_ARCH_HOST := $(WAVE_HOME)/WaveDependencies/$(OS)/$(ARCH_HOST)

BUILD_DIR_DEPENDENCIES := $(WAVE_HOME)/build/target26

DCM_HOME := $(shell pwd | sed "s/Dcm.*/Dcm/")
DCM_SRC := $(DCM_HOME)/source

SLM_HOME := $(shell pwd | sed "s/Slm.*/Slm/")

FSC_HOME := $(shell pwd | sed "s/Fsc.*/Fsc/")

RESOURCE_GENERATOR := $(WAVE_HOME)/resourcegenerator/WaveResourceGenerator.$(OS).$(ARCH_HOST)


#yes these things should be put in individual lib makefiles
# but, for simplicity, 
# we want to include this common makefile first in each makefile, 
# and everything else after
# so we need to compute a few basic library-specific things here

# PROJECT is the project name, such as Dcm or Wave
# HOME is the top of tree for that project

ifneq '$(findstring Dcm,$(CURDIR))' ''
	PROJECT := Dcm
	HOME := $(DCM_HOME)
	VERSION_FULL = $(DCM_VERSION_MAJOR).$(DCM_VERSION_MINOR).$(DCM_VERSION_PATCH) 
	VERSION_MAJOR = $(DCM_VERSION_MAJOR)
	BUILD_OS_DIR := $(HOME)/build/$(PROJECT)/$(OS)
	BUILD_DIR := $(BUILD_OS_DIR)/$(ARCH)/$(BUILD_TYPE)
	LIB_TO_BUILD = $(LIB.SO.VER)
	BUILD_DIR_DYNAMIC_SRC	:= $(BUILD_DIR)/$(DYNAMIC_SRC)
	DCM_CLISPEC_GENERATOR_PGM   := \
		$(BUILD_OS_DIR)/$(ARCH_HOST)/$(BUILD_TYPE)/$(BIN)/CliSpecGenerator.$(OS).$(ARCH_HOST)

else ifneq '$(findstring uBreeze,$(CURDIR))' ''
	PROJECT := uBreeze
	HOME := $(WAVE_HOME)/breeze/uBreeze
	BUILD_DIR := $(HOME)/build
	LIB_TO_BUILD = $(LIB.SO)

	#don't need resources for this lib
	RESOURCE_GENERATOR :=

else ifneq '$(findstring Wave,$(CURDIR))' ''
	PROJECT := Wave
	HOME := $(WAVE_HOME)
	VERSION_FULL = $(WAVE_VERSION_MAJOR).$(WAVE_VERSION_MINOR).$(WAVE_VERSION_PATCH)
	VERSION_MAJOR = $(WAVE_VERSION_MAJOR)
	BUILD_DIR := $(HOME)/build/$(PROJECT)/$(OS)/$(ARCH)/$(BUILD_TYPE)
	LIB_TO_BUILD = $(LIB.SO.VER)
	BUILD_DIR_DYNAMIC_SRC	:= $(BUILD_DIR)/$(DYNAMIC_SRC)

else ifneq '$(findstring slm,$(CURDIR))' ''
	PROJECT := Slm
	HOME := $(SLM_HOME)
	VERSION_FULL = $(SLM_VERSION_MAJOR).$(SLM_VERSION_MINOR).$(SLM_VERSION_PATCH)
	VERSION_MAJOR = $(SLM_VERSION_MAJOR)
	BUILD_DIR := $(HOME)/build/$(PROJECT)/$(OS)/$(ARCH)/$(BUILD_TYPE)
	LIB_TO_BUILD = $(LIB.SO.VER)
	BUILD_DIR_DYNAMIC_SRC	:= $(BUILD_DIR)/$(DYNAMIC_SRC)

else ifneq '$(findstring fsc,$(CURDIR))' ''
	PROJECT := Fsc
	HOME := $(FSC_HOME)
	VERSION_FULL = $(FSC_VERSION_MAJOR).$(FSC_VERSION_MINOR).$(FSC_VERSION_PATCH)
	VERSION_MAJOR = $(FSC_VERSION_MAJOR)
	BUILD_DIR := $(HOME)/build/$(PROJECT)/$(OS)/$(ARCH)/$(BUILD_TYPE)
	LIB_TO_BUILD = $(LIB.SO.VER)
	BUILD_DIR_DYNAMIC_SRC	:= $(BUILD_DIR)/$(DYNAMIC_SRC)

endif


